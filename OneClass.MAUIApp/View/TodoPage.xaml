<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OneClass.MAUIApp.View.TodoPage"
             xmlns:Components="clr-namespace:OneClass.MAUIApp.View.Components"
             Title="TodoPage">
        <!-- 3 rounded buttons (Assigned, Missing, Done) aligned horizantaly, will be used to filter the TODO -->
    <HorizontalStackLayout 
        Spacing="10"
        HorizontalOptions="CenterAndExpand"
        VerticalOptions="StartAndExpand">
        <Button CornerRadius="25"  Text="Assigned" BorderWidth="1"  BackgroundColor="{x:StaticResource Tertiary}"
                WidthRequest="100"/>
        <Button CornerRadius="25" Text="Missing" BackgroundColor="{x:StaticResource WhiteSmoke}" TextColor="Black" BorderWidth="1" BorderColor="DarkGray"  WidthRequest="100"/>
        <Button  CornerRadius="25" Text="Done"  TextColor="Black" BorderWidth="1" BackgroundColor="{x:StaticResource WhiteSmoke}" BorderColor="DarkGray" WidthRequest="100"/>
     
    </HorizontalStackLayout>

