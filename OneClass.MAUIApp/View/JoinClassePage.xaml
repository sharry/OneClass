            Placeholder="Name"

            Margin="0,0,0,12"
            />
        <Label
            Text="Subject"

            HorizontalOptions="Start"
            VerticalOptions="Center"
            />
        <Entry
            Placeholder="Description"

            Margin="0,0,0,12"
            />
